<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>edu.spcollege.tbk.controller.UserLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountsServlet</servlet-name>
        <servlet-class>edu.spcollege.tbk.controller.AccountsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransfersServlet</servlet-name>
        <servlet-class>edu.spcollege.tbk.controller.TransfersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransferConfirmServlet</servlet-name>
        <servlet-class>edu.spcollege.tbk.controller.TransferConfirmServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChecksServlet</servlet-name>
        <servlet-class>edu.spcollege.tbk.controller.ChecksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChecksSearchServlet</servlet-name>
        <servlet-class>edu.spcollege.tbk.controller.ChecksSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckStopPaymentServlet</servlet-name>
        <servlet-class>edu.spcollege.tbk.controller.CheckStopPaymentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckOrderServlet</servlet-name>
        <servlet-class>edu.spcollege.tbk.controller.CheckOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/userLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountsServlet</servlet-name>
        <url-pattern>/accounts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransfersServlet</servlet-name>
        <url-pattern>/transfers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransferConfirmServlet</servlet-name>
        <url-pattern>/transferConfirm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChecksServlet</servlet-name>
        <url-pattern>/checks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChecksSearchServlet</servlet-name>
        <url-pattern>/checksSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckStopPaymentServlet</servlet-name>
        <url-pattern>/checkStopPayment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckOrderServlet</servlet-name>
        <url-pattern>/checkOrder</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
